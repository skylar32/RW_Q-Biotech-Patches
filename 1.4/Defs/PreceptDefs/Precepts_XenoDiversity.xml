<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Issue -->
    <IssueDef>
        <defName>XenoDiversity</defName>
        <label>xenodiversity</label>
        <iconPath>UI/Issues/PlaceholderIssue</iconPath>
    </IssueDef>

    <!-- Precepts -->
    <PreceptDef>
        <defName>XenoDiversity_Abhorrent</defName>
        <issue>XenoDiversity</issue>
        <label>intense bigotry</label>
        <description>Our genetic stock is the purest. Those of other kinds are inferior and cannot live alongside us.</description>
        <impact>Medium</impact>
        <displayOrderInIssue>60</displayOrderInIssue>
        <comps>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Abhorrent</thought>
            </li>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Abhorrent_Social</thought>
            </li>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Abhorrent_Uniform</thought>
                <description>All colonists are of the same xenotype</description>
            </li>
        </comps>
    </PreceptDef>
    
    <PreceptDef>
        <defName>XenoDiversity_Horrible</defName>
        <issue>XenoDiversity</issue>
        <label>moderate bigotry</label>
        <description>Other xenotypes are strange and should be shunned. They don't belong in the community.</description>
        <impact>Low</impact>
        <displayOrderInIssue>50</displayOrderInIssue>
        <comps>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Horrible</thought>
            </li>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Horrible_Social</thought>
            </li>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Horrible_Uniform</thought>
                <description>All colonists are of the same xenotype</description>
            </li>
        </comps>
    </PreceptDef>

    <PreceptDef>
        <defName>XenoDiversity_Disapproved</defName>
        <issue>XenoDiversity</issue>
        <label>mild bigotry</label>
        <description>Other xenotypes are uncanny and troublesome. A homogeneous community is best.</description>
        <impact>Low</impact>
        <displayOrderInIssue>40</displayOrderInIssue>
        <comps>
            <li Class="PreceptComp_SituationalThought">
                <thought>XenoDiversity_Disapproved</thought>
